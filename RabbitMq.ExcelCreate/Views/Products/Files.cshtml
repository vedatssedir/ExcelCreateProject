@model List<UserFile>
@{
    ViewData["Title"] = "Files";
}



<h1>Files</h1>
<table class="table table-striped">
    <thead>
    <tr>
        <td>File Name</td>
        <td>Created Date</td>
        <td>File Status</td>
        <td>Download</td>



    </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FileName</td>
            <td>@item.CreateDate</td>
            <td>@item.FileStatus</td>
            <td>
                <a class ="btn btn-primary @(item.FileStatus == FileStatus.Creating  ? "disabled" : "")" href="~/files/@item.FilePath">Download</a>
            </td>
        </tr>
    }

</table>